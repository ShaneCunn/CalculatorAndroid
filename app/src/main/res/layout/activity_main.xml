<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot"
            style="@style/NumberButtonStyle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/button0"
            android:layout_marginBottom="48dp"/>
    <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonDot" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/buttonDot" app:layout_constraintEnd_toStartOf="@+id/buttonPlusMinus"
    />
    <Button
            android:text="-/+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlusMinus"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button0" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonEqual" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/buttonDot"/>
    <Button
            android:text="="
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEqual"
            style="@style/ActionButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonPlusMinus"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/buttonDot"/>
    <Button
        android:text="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        style="@style/NumberButtonStyle" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button0"
        android:layout_marginBottom="24dp" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/buttonDot"/>
    <Button
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonDot" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/button1" app:layout_constraintEnd_toStartOf="@+id/buttonPlusMinus"
    />
    <Button
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button0" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonEqual"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/button1"/>
    <Button
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            style="@style/ActionButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonPlusMinus"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/button1"/>
    <Button
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            style="@style/NumberButtonStyle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button0"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/button1"/>
    <Button
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonDot" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/button4" app:layout_constraintEnd_toStartOf="@+id/buttonPlusMinus"
    />
    <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button0" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonEqual"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/button4"/>
    <Button
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            style="@style/ActionButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonPlusMinus"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/button4"/>



</android.support.constraint.ConstraintLayout>