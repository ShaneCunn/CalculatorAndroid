<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/dot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot"
            style="@style/NumberButtonStyle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"/>
    <Button
            android:text="@string/zero"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonDot"
            app:layout_constraintBottom_toBottomOf="@+id/buttonDot"/>
    <Button
            android:text="@string/plusMinus"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlusMinus"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button0" app:layout_constraintBottom_toBottomOf="@+id/button0"/>
    <Button
            android:text="@string/equal"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEqual"
            style="@style/ActionButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonPlusMinus"
            app:layout_constraintBottom_toBottomOf="@+id/buttonPlusMinus"/>


    <Button
            android:text="@string/one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            style="@style/NumberButtonStyle"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/buttonDot" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/two"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            style="@style/NumberButtonStyle"
            app:layout_constraintBottom_toTopOf="@+id/button0" app:layout_constraintStart_toEndOf="@+id/button1"/>
    <Button
            android:text="@string/three"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            style="@style/NumberButtonStyle"
            app:layout_constraintBottom_toTopOf="@+id/buttonPlusMinus"
            app:layout_constraintStart_toEndOf="@+id/button2"/>
    <Button
            android:text="@string/plus"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            style="@style/ActionButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button3" app:layout_constraintBottom_toTopOf="@+id/buttonEqual"/>

    <Button
            android:text="@string/four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            style="@style/NumberButtonStyle"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/button1"/>
    <Button
            android:text="@string/five"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button4" app:layout_constraintBottom_toTopOf="@+id/button2"/>
    <Button
            android:text="@string/six"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button5" app:layout_constraintBottom_toTopOf="@+id/button3"/>
    <Button
            android:text="@string/minus"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            style="@style/ActionButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button6" app:layout_constraintBottom_toTopOf="@+id/buttonPlus"/>


    <Button
            android:text="@string/seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            style="@style/NumberButtonStyle"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/button4"/>
    <Button
            android:text="@string/eight"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button7" app:layout_constraintBottom_toTopOf="@+id/button5"/>
    <Button
            android:text="@string/nine"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button8" app:layout_constraintBottom_toTopOf="@+id/button6"/>
    <Button
            android:text="@string/multiple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMulti"
            style="@style/ActionButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/button9" app:layout_constraintBottom_toTopOf="@+id/buttonMinus"
            app:layout_constraintEnd_toEndOf="parent"/>


    <Button
            android:text="@string/clear"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClear"
            style="@style/NumberButtonStyle"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/button7"
            app:layout_constraintEnd_toStartOf="@+id/button8" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/delete"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDelete"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonClear" app:layout_constraintBottom_toTopOf="@+id/button8"
            android:layout_marginStart="80dp" android:layout_marginBottom="100dp"/>
    <Button
            android:text="@string/percent"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPercent"
            style="@style/NumberButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonDelete" app:layout_constraintBottom_toTopOf="@+id/button9"/>
    <Button
            android:text="@string/divide"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide"
            style="@style/ActionButtonStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonPercent"
            app:layout_constraintBottom_toTopOf="@+id/buttonMulti"/>
    <TextView
            android:text="@string/defaultTextvalue"
            android:layout_width="405dp"
            android:layout_height="208dp"
            android:id="@+id/textViewResults" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonDelete" app:layout_constraintVertical_bias="0.996"
            android:textAlignment="textEnd" android:layout_marginEnd="16dp"
            android:textStyle="bold" android:textSize="24sp" android:layout_marginStart="16dp"/>


</android.support.constraint.ConstraintLayout>